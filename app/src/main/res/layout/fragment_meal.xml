<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.tiffin.tiffinqnq.FragmentMeal">
    <TextView
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_sample2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">


        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prev"
            android:textAllCaps="false"
            android:onClick="previousMonthAction"
            android:textColor="#F8F7F7"
            android:textStyle="bold"
            android:background="@drawable/gradiant_background"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/monthYearTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight="2"
            android:text="feb 2023" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#F8F7F7"
            android:background="@drawable/gradiant_background"
            android:text="Next"
            android:onClick="nextMonthAction"
            android:textStyle="bold"
            android:textSize="20sp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">
        <CheckBox
            android:id="@+id/sevendayplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 day plan "
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:button="@drawable/check_box_selector"
            android:background="#A3BDCFDD"
            android:checked="false" />
        <CheckBox
            android:id="@+id/fifteendayplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 day plan "
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:button="@drawable/check_box_selector"
            android:background="#A3BDCFDD"
            android:checked="false" />
        <CheckBox
            android:id="@+id/thirtydayplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 day plan "
            android:layout_weight="1"
            android:button="@drawable/check_box_selector"
            android:background="#A3BDCFDD"
            android:checked="false" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#95D1EC">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <CheckBox
                android:id="@+id/cbdinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner only "
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/check_box_selector"
                android:checked="false" />
            <TextView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:background="@drawable/round_grey"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <CheckBox
                android:id="@+id/cblunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch only "
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@drawable/check_box_selector"
                android:checked="false" />
            <TextView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:background="@drawable/round_green"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <CheckBox
                android:id="@+id/cblunchdinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch + Dinner "
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@drawable/check_box_selector"
                android:checked="false" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUN"
            android:background="#88B9DF"
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MON"
            android:background="#88B9DF"
            android:layout_margin="1dp"
            android:textColor="#000000"
            android:textAlignment="center"

            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TUE"
            android:layout_margin="1dp"
            android:background="#88B9DF"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WED"
            android:layout_margin="1dp"
            android:background="#88B9DF"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THU"
            android:layout_margin="1dp"
            android:background="#88B9DF"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FRI"
            android:layout_margin="2dp"
            android:background="#88B9DF"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SAT"
            android:layout_margin="1dp"
            android:background="#88B9DF"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="50dp" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/calendarRecyclerView"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:id="@+id/startDate"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:id="@+id/endDate"
            />


    </LinearLayout>



</LinearLayout>
